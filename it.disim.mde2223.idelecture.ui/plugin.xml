<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="it.disim.mde2223.commands.category"
            name="Juri Category">
      </category>
      <command
            categoryId="it.disim.mde2223.commands.category"
            name="Juri Command"
            id="it.disim.mde2223.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="it.disim.mde2223.handlers.SampleHandler"
            commandId="it.disim.mde2223.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="it.disim.mde2223.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="it.disim.mde2223.menus.sampleMenu"
               label="Juri Menu"
               mnemonic="J">
            <command
                  commandId="it.disim.mde2223.commands.sampleCommand"
                  id="it.disim.mde2223.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="it.disim.mde2223.toolbars.sampleToolbar">
            <command
                  id="it.disim.mde2223.toolbars.sampleCommand"
                  commandId="it.disim.mde2223.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Juri hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
