<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="it.disim.mde2223.ui.commands.category"
            name="Demo Category">
      </category>
      <command
            categoryId="it.disim.mde2223.ui.commands.category"
            name="Demo Command"
            id="it.disim.mde2223.ui.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="it.disim.mde2223.ui.handlers.SampleHandler"
            commandId="it.disim.mde2223.ui.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="it.disim.mde2223.ui.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="it.disim.mde2223.ui.menus.sampleMenu"
               label="MDE2223"
               mnemonic="M">
            <command
                  commandId="it.disim.mde2223.ui.commands.sampleCommand"
                  id="it.disim.mde2223.ui.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="it.disim.mde2223.ui.toolbars.sampleToolbar">
            <command
                  id="it.disim.mde2223.ui.toolbars.sampleCommand"
                  commandId="it.disim.mde2223.ui.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="MDE COURSE 22">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
